<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quizappvi.ui.fragments.MainFragment">


    <TextView
        android:id="@+id/Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz"
        android:textAllCaps="true"
        android:textAlignment="gravity"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"

        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/quiz"
        android:layout_marginStart="160dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"

        android:contentDescription="@string/todo">

    </ImageView>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="false"
     android:text="@string/questions_a"
      android:layout_marginTop="180dp"
           android:layout_marginStart="90dp"
      />






    <ProgressBar

        android:id="@+id/progress_bar"
        android:layout_width="250dp"
        android:layout_height="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
      android:progressDrawable="@color/purple"
        android:background="@drawable/pb_drawable_size"
        android:layout_marginStart="90dp"
        android:layout_marginTop="205dp"
        android:max="90"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="70dp"
        android:layout_marginTop="290dp"


        />







    <Spinner

        android:id="@+id/CategoryQ"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"


        android:entries="@array/types"


        android:layout_centerHorizontal="true"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty"



        android:layout_centerHorizontal="false"
        android:layout_marginStart="70dp"
        android:layout_marginTop="390dp"


        />







    <Spinner

        android:id="@+id/DifQ"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"

        android:entries="@array/dificulity"

        android:layout_centerHorizontal="true"



        />


    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/start"

        android:textAllCaps="true"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbackground"


        >






    </Button>




</RelativeLayout>